{
  "name": "doctors-linc",
  "version": "0.1.0",
  "description": "AI-powered OCR pipeline for healthcare document processing with automated PowerPoint generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:check": "echo 'âœ… Doctors-Linc development environment ready!'",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "cli": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ocr": "jest --testPathPattern=ocr",
    "test:ai": "jest --testPathPattern=ai",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist build output temp",
    "prepare": "husky install",
    "docker:build": "docker build -t doctors-linc .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "ocr:process": "ts-node src/cli.ts ocr",
    "pipeline:run": "ts-node src/cli.ts pipeline",
    "example": "bash scripts/example.sh",
    "docs:generate": "typedoc --out docs src",
    "security:check": "npm audit && snyk test"
  },
  "keywords": [
    "healthcare",
    "ocr",
    "ai",
    "medical",
    "fhir",
    "hipaa",
    "nlp",
    "powerpoint",
    "langchain",
    "openai"
  ],
  "author": "Doctors-Linc Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/vision": "^4.1.0",
    "@langchain/core": "^0.1.0",
    "@langchain/openai": "^0.0.14",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "langchain": "^0.1.7",
    "openai": "^4.24.1",
    "pptxgenjs": "^3.12.0",
    "axios": "^1.6.5",
    "bull": "^4.12.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "uuid": "^9.0.1",
    "marked": "^11.1.1",
    "sharp": "^0.33.2",
    "pdf-parse": "^1.1.1",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.interface.ts",
      "!src/types/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
