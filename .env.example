# ============================================
# Doctors-Linc Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --------------------------------------------
# Node.js Environment
# --------------------------------------------
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# --------------------------------------------
# Google Cloud Vision API
# --------------------------------------------
# Path to your service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-key.json
# Or use the key content directly (base64 encoded)
# GOOGLE_CLOUD_CREDENTIALS_JSON=

# --------------------------------------------
# OpenAI API
# --------------------------------------------
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2048

# --------------------------------------------
# LangChain Configuration
# --------------------------------------------
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=doctors-linc

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/doctors_linc
DB_HOST=localhost
DB_PORT=5432
DB_NAME=doctors_linc
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --------------------------------------------
# File Storage
# --------------------------------------------
INPUT_DIR=./images
OUTPUT_DIR=./output
TEMP_DIR=./temp
CREDENTIALS_DIR=./credentials
UPLOAD_MAX_SIZE=10485760

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# --------------------------------------------
# Security & Authentication
# --------------------------------------------
JWT_SECRET=change-this-to-a-random-secret-key
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10
ENCRYPTION_KEY=change-this-to-32-character-key

# --------------------------------------------
# HIPAA Compliance
# --------------------------------------------
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2190
PHI_ENCRYPTION_ENABLED=true
BAA_VALIDATION_ENABLED=true

# --------------------------------------------
# API Rate Limiting
# --------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# OCR Settings
# --------------------------------------------
OCR_CONFIDENCE_THRESHOLD=0.80
OCR_ENHANCE_IMAGES=true
OCR_DETECT_HANDWRITING=true
OCR_LANGUAGES=en,ar

# --------------------------------------------
# AI Processing
# --------------------------------------------
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY_MS=1000
AI_TIMEOUT_MS=30000

# --------------------------------------------
# Presentation Generation
# --------------------------------------------
PPTX_FONT_FAMILY=Courier New
PPTX_FONT_SIZE=12
PPTX_TEMPLATE_PATH=./templates/default.pptx

# --------------------------------------------
# FHIR Configuration
# --------------------------------------------
FHIR_VERSION=R4
FHIR_BASE_URL=http://localhost:8080/fhir
FHIR_VALIDATE_RESOURCES=true
# OID namespace for Sudan: 1.3.6.1.4.1.61026.1
# OID namespace for Saudi: 1.3.6.1.4.1.61026.2
FHIR_OID_BASE=1.3.6.1.4.1.61026

# --------------------------------------------
# Translation Settings
# --------------------------------------------
TRANSLATION_ENABLED=true
TRANSLATION_CACHE_ENABLED=true
DEFAULT_SOURCE_LANGUAGE=en
DEFAULT_TARGET_LANGUAGE=ar

# --------------------------------------------
# Monitoring & Logging
# --------------------------------------------
SENTRY_DSN=
DATADOG_API_KEY=
PROMETHEUS_ENABLED=false

# --------------------------------------------
# Development Tools
# --------------------------------------------
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false
SKIP_VALIDATION=false

# --------------------------------------------
# Email Notifications (Optional)
# --------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@doctors-linc.local

# --------------------------------------------
# Webhook Configuration (Optional)
# --------------------------------------------
WEBHOOK_URL=
WEBHOOK_SECRET=
WEBHOOK_EVENTS=document.processed,error.occurred
